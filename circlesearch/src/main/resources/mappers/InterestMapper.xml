<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.capstone.CircleSearch.Model.dao.InterestDAO">
    <select id="selectInterestList" parameterType="com.capstone.CircleSearch.Model.dto.InterestDTO" resultType="com.capstone.CircleSearch.Model.dto.InterestDTO">
        SELECT *
        FROM INTEREST_tb
    </select>

    <update id="insertUserInterest" parameterType="com.capstone.CircleSearch.Model.dto.InterestInputDTO">
        UPDATE USER_tb
        SET USER_INTEREST1 = #{interest1}, USER_INTEREST2 = #{interest2}
        WHERE USER_ID = #{userID}
    </update>
</mapper>